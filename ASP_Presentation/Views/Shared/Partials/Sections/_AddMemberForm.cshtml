@model AddMemberForm


<div id="addMemberModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h3>Add Team Member</h3>
            <button type="button" class="btn-close" data-close="true"></button>
        </div>

        <form class="ajaxForm" novalidate method="post" asp-action="AddMember" asp-controller="Admin" enctype="multipart/form-data">

            <div class="image-previewer circle ">
                <img src="" class="image-preview" />
                <input asp-for="MemberImage" accept="image/*" class="hide" />
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                    <input asp-for="Phone" />
                    <span asp-validation-for="Phone"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="JobTitle"></label>
                <div class="field-group">
                    <input asp-for="JobTitle" />
                    <span asp-validation-for="JobTitle"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Address"></label>
                <div class="field-group">
                    <input asp-for="Address" />
                    <span asp-validation-for="Address"></span>
                </div>
            </div>

            <div class="form-group dob-group">
                <label>Date of Birth</label>
                <div class="dob-selectors">
                    <select asp-for="BirthDay">
                        <option value="">Day</option>
                        @for (int d = 1; d <= 31; d++)
                        {
                            <option value="@d">@d</option>
                        }
                    </select>

                    <select asp-for="BirthMonth">
                        <option value="">Month</option>
                        @for (int m = 1; m <= 12; m++)
                        {
                            <option value="@m">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                        }
                    </select>

                    <select asp-for="BirthYear">
                        <option value="">Year</option>
                        @for (int y = DateTime.Now.Year; y >= 1900; y--)
                        {
                            <option value="@y">@y</option>
                        }
                    </select>
                </div>
            </div>

           

            

            <button type="submit" class="btn btn-submit btn-blue">Create</button>

        </form>

    </div>
</div>

