@model IEnumerable<Projects>

@{
    ViewData["Title"] = "Projects view";
}


<partial name="Partials/Sections/_AddProjectForm" model="new AddProjectForm()" />
<partial name="Partials/Sections/_EditProjectForm" model="new EditProjectForm()" /> 
<style>
    .status-filter {
        display: flex;
        margin-bottom: 1rem;
    }

    .filter-btn {
        background: none;
        border: none;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        color: #64748b; /* grå text */
        cursor: pointer;
        position: relative;
        font-size: 1rem;
    }

        .filter-btn.active {
            color: #3b82f6; /* blå text */
            font-weight: 600;
        }

            .filter-btn.active::after {
                content: "";
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 100%;
                height: 3px;
                background-color: #3b82f6;
            }

</style>



<section id="projects">
    <header>
        <h2>Projects</h2>
        <button type="button" data-modal="true" data-target="#addProjectModal" class="btn btn-blue btn-add">Projects</button>
    </header>

    <nav class="status-filter">
        <button class="filter-btn active" data-status="all">ALL</button>
        <button class="filter-btn" data-status="ongoing">STARTED</button>
        <button class="filter-btn" data-status="notstarted">NOT STARTED</button>
        <button class="filter-btn" data-status="completed">COMPLETED</button>
    </nav>



    <div class="surface surface-cards">


        @if (Model != null)
        {
            foreach(var project in Model)
            {
                <partial name="Partials/Sections/_ProjectList" model="project" />
            }
        }
 
    </div>
</section>


